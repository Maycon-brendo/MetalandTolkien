<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questao1Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_titulo_q1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:text="@string/tv_titulo_q1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radio_group_q1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_q1_item_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Christopher Lee (saruman)" />

            <RadioButton
                android:id="@+id/rb_q1_item_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ian McKellen (Gandalf)" />

            <RadioButton
                android:id="@+id/rb_q1_item_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elijah Wood(Frodo Baggins)" />

            <RadioButton
                android:id="@+id/rb_q1_item_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="John Rhys-Davies(gimli)" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_confirmaResposta_q1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AvanÃ§ar" />
    </LinearLayout>
</FrameLayout>
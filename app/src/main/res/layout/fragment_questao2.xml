<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questao2Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_titulo_q2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:text="Burzum é uma banda de black metal norueguesa, qual significado do nome da banda ?"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radio_group_q2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_q2_item_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burzum significa prisão na língua sombria de Mordor" />

            <RadioButton
                android:id="@+id/rb_q2_item_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burzum significa anel na língua sombria de Mordor" />

            <RadioButton
                android:id="@+id/rb_q2_item_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burzum significa escuridão na língua sombria de Mordor" />

            <RadioButton
                android:id="@+id/rb_q2_item_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burzum significa governar na língua sombria de Mordor"
                tools:ignore="HardcodedText" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_confirmaResposta_q2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avançar" />
    </LinearLayout>
</FrameLayout>
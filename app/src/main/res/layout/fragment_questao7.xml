<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questao7Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_titulo_q7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:text="banda gorgoroth se inspiro em uma localidade de mordor, onde seria esta ?"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radio_group_q7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_q7_item_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sul de mordor" />

            <RadioButton
                android:id="@+id/rb_q7_item_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nordeste de mordor" />

            <RadioButton
                android:id="@+id/rb_q7_item_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="norte de mordor" />

            <RadioButton
                android:id="@+id/rb_q7_item_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="noroeste de mordor" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_confirmaResposta_q7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AvanÃ§ar" />
    </LinearLayout>
</FrameLayout>